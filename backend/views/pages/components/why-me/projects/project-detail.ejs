    }

    .title-section {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .logo_image {
        height: clamp(50px, 5vh, 150px);
        width: clamp(130px, 13vw, 200px);
        background-color: #000;
        border-radius: 5px;
    }

    .title-sub-section {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
    }

    .project-title {
        font: 600 clamp(30px, 2vw, 40px) 'Roboto';
        margin: 10px 0;
    }

    .profileImage {
        margin: 10px 0 20px 10px;
    }

    .profileImage img {
        width: clamp(50px, 2vw, 70px);
        height: clamp(50px, 2vh, 70px);
    }

    .profile-desc {
        margin: 0 20px;
    }

    .profile-desc .name {
        font: 400 clamp(10px, 2vw, 20px) 'Roboto';
        margin: 5px 0;
    }

    .profile-desc .reading-time,
    .profile-desc .reading-time .fas {
        font: 100 clamp(10px, 2vw, 20px) 'Roboto';
        opacity: 0.4;
        margin-right: 5px;
    }

    .menulist {
        display: inline-flex;
        margin: 2rem 0;
        gap: 20px;
    }

    .project-container {
        display: grid;
        grid-template-columns: 80% 20%;
    }

    .project-detail {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .project-detail .more-contents {
        display: flex;
        flex-direction: row;
        width: 100%;
    }

    .image-container:nth-child(n) {
        background-color: #b3d9ff;
        width: 50%;
        min-height: 300px;
    }

    .image-container .img {
        width: 100%;
        height: 100%;
        background-color: violet;
        border-radius: 5px;
    }

    .contents:nth-child(n) {
        background-color: #ffb3b3;
        min-height: 300px;
        width: 50%;
    }

    .project-detail .contents p {
        font: 400 1rem 'Roboto';
        padding: clamp(1em, 2vw, 3em);
        color: rgb(23, 27, 30);
    }

    .page-contents {
        position: sticky;
        top: 5%;
        max-width: 500px;
        max-height: 300px;
        background-color: #4897e7;
        padding: 2rem;
        margin-left: 10px;
    }

    .page-contents .content-heading {
        margin: 15px 0;
        font: 500 clamp(10px, 2vw, 16px) 'Roboto';
        text-decoration: underline;
        text-transform: uppercase;
    }

    .page-contents ol li::before {
        color: #000;
    }

    .page-contents ol .list-text {
        font: 300 clamp(12px, 2vw, 18px) 'Roboto';
        margin: 5px 0;
        color: tomato;
        cursor: pointer;
    }

    @media screen and (max-width: 800px) {

        .project-container {
            grid-template-columns: 100% 0%;
        }

        .project-detail .more-contents {
            flex-direction: column-reverse;

        }

        .image-container:nth-child(n),
        .contents:nth-child(n) {
            width: 100%;
        }

        .page-contents {
            display: none;
        }
    }
</style>

