<div class="login_wrapper">
    <div class="sub_login_wrapper">
        <h1>Welcome <%= name %>
        </h1>
        <div class="login-error">
            <p>
                <%= error %>
            </p>
        </div>
        <div class="login-success">
            <p>
                <%= success %>
            </p>
        </div>

        <div class="profileDetail">
            <div>
                <img class="profileimg" href="#" src="<%= image %>" alt=" " />

                <div class="profileIconandInput" style="margin-top: 2rem">
                    <i class="fas fa-id-card "></i>
                    <input name="id" id="id" type="text" value="<%= id %>" />
                </div>
                <div class="profileIconandInput">
                    <i class="fas fa-user"></i>
                    <input name="name" type="text" value="<%= name %>" id="name" />
                </div>
                <div class="profileIconandInput">
                    <i class="fas fa-envelope"></i>
                    <input name="email" type="email" value="<%= email %>" required id="email" />
                </div>
                <div class="profileIconandInput">
                    <i class="fas fa-battery-full"></i>
                    <input name="status" id="status" type="text" value="<%= status %>" />

                </div>
                <div class="profileIconandInput">
                    <i class="fas fa-user-circle"></i>
                    <input name="role" id="role" type="text" value="<%= role %>" />
                </div>
            </div>
            <div class="profileBtns">
                <a href="/" class="">
                    <i id="iconColor" class="fa fa-home" aria-hidden="true"> Home</i>
                </a>
                <a href="/" class="">
                    <i id="iconColor" class="fa fa-edit" aria-hidden="true"> Edit</i>
                </a>
                <form method="POST" action="/auth/deleteUser/<%= id %>?_method=DELETE">
                    <button type="submit" title="Delete">
                        <a>
                            <i id="iconColor" class="fa fa-trash" aria-hidden="true"> Delete</i>
                        </a>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>