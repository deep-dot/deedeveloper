<div class="review-show">
  <div class="review">
    <form class="comment-form" action="/review/{{review._id}}/comment" method="POST" content-type='application/json'>
      <div>
        <p class="title">Review </p>
        <p>Created on: {{dateFormat review.createdAt "dddd, MMMM Do YYYY"}}</p>
        <p> "{{review.review}}"</p>
        <textarea id="summernote" type="text" name="comment"></textarea>
      </div>
      <div class="comment-form-btns">
        <div>
          <button type="submit">Save</button>
        </div>
        <div class="cancel">
          <a href="/#testimonial">Cancel</a>
        </div>
      </div>
    </form>
  </div>

  <div class="comment">
    <p class="title">Total comments: {{review.comments.length}} </p>
    <hr>
    {{#each review.comments}}
    <p>{{{this.content}}}</p>
    <p>Created on: {{dateFormat this.createdAt "dddd, MMMM Do YYYY"}}
      by {{this.username}}</p>
    <form method="POST" action="/deleteComment/{{this._id}}?_method=DELETE">
      <input type="hidden" value="{{this.reviewId}}" name="reviewId">
      <input type="hidden" value="{{this.userId}}" name="userId">
      <button type="submit">Delete</button>
    </form>
    <hr>
    {{/each}}
  </div>
</div>